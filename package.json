{
  "name": "fluxer",
  "version": "1.0.0",
  "description": "Fluxer Desktop – chat.shadowflee.com",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "create-icon": "node scripts/create-icon.js",
    "build": "npm run create-icon && electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.shadowflee.fluxer",
    "productName": "Fluxer",
    "copyright": "Copyright © 2026 shadowflee",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**",
      "node_modules/**"
    ],
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ],
      "icon": "assets/icon.png",
      "category": "Network",
      "executableName": "fluxer"
    },
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] },
        { "target": "zip", "arch": ["x64", "arm64"] }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false,
      "certificateSubjectName": null,
      "certificateSha1": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Fluxer",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  },
  "author": {
    "name": "shadowflee",
    "email": "admin@shadowflee.com"
  },
  "homepage": "https://chat.shadowflee.com",
  "dependencies": {
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^33.3.0",
    "electron-builder": "^25.1.8",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.5"
  }
}
